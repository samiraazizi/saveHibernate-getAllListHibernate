<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="database.BankAccount" table="tbl_account">
        <id column="ID" name="id"/>
        <property column="F_OWNER" name="owner"/>
        <property column="F_NUMBER" name="number"/>
        <property column="F_BALANCE" name="balance"/>
    </class>
</hibernate-mapping>